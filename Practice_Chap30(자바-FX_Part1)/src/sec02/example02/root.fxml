<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.AmbientLight?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<!-- ctrl + space를 누르면 intelligence기능이 나온다
주석처리는 드래그 후 ctrl+shift+/ -->

<HBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/15.0.1">
	<padding> <!-- 안쪽 여백 설정 태그 -->  
		<Insets topRightBottomLeft="10" />
	</padding>	
	<spacing>10</spacing> <!-- HBox에 배치되는 컨트롤들의 간격을 10px로 하겠다 -->
	<!-- 컨트롤 추가 -->
	<children>
		<TextField prefWidth="200" />
		<Button text="확인" />
		<Button text="취소" />
	</children>
</HBox>
